<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsFonts.App">


  

    <Application.Resources>
        <ResourceDictionary>
            <OnPlatform x:TypeArguments="x:String" x:Key="FontAwesomeRegular">
                <On Platform="Android" Value="fa-regular-400.ttf#Font Awesome 5 Free Regular" />
                <On Platform="UWP" Value="/Assets/fa-regular-400.ttf#Font Awesome 5 Free" />
                <On Platform="iOS" Value="Font Awesome 5 Free" />
            </OnPlatform>
        </ResourceDictionary>
    </Application.Resources>
</Application>